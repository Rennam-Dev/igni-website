---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Stats from '~/components/widgets/Stats.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Igni Digital - Automação de Marketing com IA para Clínicas',
  description: 'Aumente seus agendamentos em até 40% com atendimento IA 24/7 via WhatsApp. Powered by Taskni.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Agendar Consultoria Gratuita',
        href: 'https://cal.com/ignidigital/consultoria',
        target: '_blank',
        icon: 'tabler:calendar',
      },
      {
        text: 'Ver Como Funciona',
        href: '/como-funciona'
      },
    ]}
  >
    <Fragment slot="title">
      Transforme sua Clínica com
      <span class="text-accent dark:text-accent">Atendimento IA 24/7</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">
        Aumente seus agendamentos em até 40%
      </span>
      com nossa tecnologia proprietária de automação de marketing e atendimento inteligente.
      <br />
      <span class="text-sm text-muted">
        Powered by Taskni Platform
      </span>
    </Fragment>
  </Hero>

  <!-- Stats -->
  <Stats
    title="Resultados Comprovados"
    subtitle="Números reais dos nossos clientes"
    stats={[
      { amount: '+1.500', title: 'Atendimentos/mês' },
      { amount: '98%', title: 'Taxa de resposta' },
      { amount: '2min', title: 'Tempo de resposta' },
      { amount: '+40%', title: 'Aumento em agendamentos' },
    ]}
  />

  <!-- Features -->
  <Features
    id="features"
    title="Por que escolher a Igni Digital?"
    subtitle="Não somos só uma plataforma. Somos seu parceiro de crescimento."
    items={[
      {
        title: 'Atendimento IA 24/7',
        description:
          'Responda leads via WhatsApp em qualquer horário, sem perder oportunidades fora do expediente.',
        icon: 'tabler:robot',
      },
      {
        title: 'Setup em 48 horas',
        description:
          'Não perca tempo. Em 2 dias sua clínica está operando com IA treinada e integrada.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Account Manager Dedicado',
        description:
          'Acompanhamento semanal, relatórios personalizados e suporte prioritário.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Tecnologia Proprietária',
        description:
          'Taskni Platform: nossa solução desenvolvida especialmente para clínicas brasileiras.',
        icon: 'tabler:code',
      },
      {
        title: 'Campanhas de Reativação',
        description:
          'Traga de volta pacientes inativos com mensagens personalizadas e no momento certo.',
        icon: 'tabler:refresh',
      },
      {
        title: 'ROI em 30 dias',
        description:
          'Veja resultados reais no primeiro mês ou devolvemos seu investimento.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- How it Works -->
  <Steps
    title="Como Funciona"
    subtitle="Do primeiro contato até o crescimento contínuo"
    items={[
      {
        title: 'Consultoria Gratuita',
        description:
          'Analisamos seu negócio e identificamos oportunidades de automação em 30 minutos.',
        icon: 'tabler:video',
      },
      {
        title: 'Setup Personalizado (48h)',
        description:
          'Configuramos o Taskni com os dados da sua clínica e treinamos a IA especificamente para você.',
        icon: 'tabler:tool',
      },
      {
        title: 'Treinamento da Equipe',
        description:
          'Ensinamos sua recepcionista a usar o sistema em 1 hora. Simples e intuitivo.',
        icon: 'tabler:school',
      },
      {
        title: 'Acompanhamento Contínuo',
        description:
          'Account Manager dedicado + relatórios semanais de performance + otimizações mensais.',
        icon: 'tabler:chart-dots',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?w=800&auto=format&fit=crop',
      alt: 'Dashboard Taskni',
    }}
  />

  <!-- Testimonials -->
  <Testimonials
    title="O que nossos clientes dizem"
    testimonials={[
      {
        testimonial: `Em 30 dias aumentamos 35% os agendamentos. O atendimento IA funciona perfeitamente fora do horário comercial.`,
        name: 'Dr. João Silva',
        job: 'Clínica Dentária Silva',
        image: {
          src: 'https://images.unsplash.com/photo-1560250097-0b93528c311a?w=200&auto=format&fit=crop',
          alt: 'Dr. João Silva',
        },
      },
      {
        testimonial: `Minha recepcionista agora foca em atender quem está na clínica. O Taskni cuida do WhatsApp e não perde nenhum lead.`,
        name: 'Marina Costa',
        job: 'Estética Bella Vita',
        image: {
          src: 'https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=200&auto=format&fit=crop',
          alt: 'Marina Costa',
        },
      },
      {
        testimonial: `A campanha de reativação trouxe 48 ex-pacientes de volta em 1 mês. ROI incrível!`,
        name: 'Dr. Pedro Santos',
        job: 'Clínica Veterinária PetCare',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=200&auto=format&fit=crop',
          alt: 'Dr. Pedro Santos',
        },
      },
    ]}
  />

  <!-- CTA Final -->
  <CallToAction
    title="Pronto para Crescer?"
    subtitle="Agende uma consultoria gratuita e descubra como a Igni Digital pode transformar sua clínica."
    actions={[
      {
        variant: 'primary',
        text: 'Agendar Agora',
        href: 'https://cal.com/ignidigital/consultoria',
        target: '_blank',
      },
    ]}
  />
</Layout>
