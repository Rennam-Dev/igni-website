---
import { Icon } from 'astro-icon/components';

interface Props {
  title?: string;
  subtitle?: string;
  items?: Array<{
    name: string;
    description: string;
    icon: string;
    color: string;
  }>;
  classes?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  items = [],
  classes = '',
} = Astro.props;
---

<section class={`scroll-mt-16 ${classes}`}>
  <div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
    {
      (title || subtitle) && (
        <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
          {title && (
            <h2
              class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
              set:html={title}
            />
          )}
          {subtitle && (
            <p class="max-w-3xl mx-auto text-xl text-muted" set:html={subtitle} />
          )}
        </div>
      )
    }
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        items.map(({ name, description, icon, color }) => (
          <div class="flex flex-col p-6 bg-white dark:bg-slate-900 rounded-lg shadow-lg hover-lift">
            <div class={`flex items-center justify-center w-16 h-16 mb-4 rounded-full ${color}`}>
              <Icon name={icon} class="w-8 h-8" />
            </div>
            <h3 class="text-xl font-bold mb-2">{name}</h3>
            <p class="text-muted">{description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
